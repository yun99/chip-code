<template name="popsface"><view class="popsface yoda_page" tt:if="{{show}}"><view class="page_ready step_page" tt:if="{{step === 1}}"><view class="ready_phone"><view class="ready_phone_back"><view class="ready_phone_color"></view><view class="ready_phone_head"></view><view class="ready_phone_animate"><view class="ready_border_box"><image tt:for="{{['lefttop', 'leftbottom', 'rightbottom', 'righttop']}}" tt:key="{{index}}" class="ready_border ready_border_{{item}}" src="https://p0.meituan.net/travelcube/2fbaeebd80e59fff3110078b1cfae68a306.png"></image></view><image class="ready_face ready_face_show" src="https://p0.meituan.net/travelcube/3c76d79adc13d6c2bf63793b46bae27275385.png"></image><image class="ready_face" src="https://p0.meituan.net/travelcube/fa6966acb49441cfd12e39adb092278f4593.png"></image><image class="ready_face" src="https://p1.meituan.net/travelcube/00c86969517de2bab0b6ef192ef8f2203072.png"></image></view><view class="ready_phone_check"><image src="https://p0.meituan.net/travelcube/931141d408dd0855a58a8ae24043cebf807.png"></image></view></view></view><view class="ready_content"><text class="ready_title ready_title_before">请进行人脸识别验证</text><text class="ready_title ready_title_after">验证时，屏幕会出现闪烁</text><text class="ready_subtitle">即将使用屏幕闪光的方式来验证您的身份</text></view><text class="yoda_primary_button ready_btn" bindtap="getFaceInfo">继续</text></view><view class="page_face step_page" style="left:{{step > 1 ? '0' : '99999px;'}}"><view class="page_face_back" style="background: rgb{{faceAction[faceCameraIndex].color}}"></view><camera tt:if="{{isYodaCamera}}" bindinitdone="cameraSuccess" frame-size="large" style="left:{{faceCameraIndex < faceAction.length && step !== 4 ? '50%' : '99999px;'}}" class="face_camera" mode="normal" device-position="front" flash="false" binderror="error"><view tt:if="{{faceCameraIndex === -1 && countDown >= 0}}" class="face_camera_count_down">{{countDown}}</view><view class="face_camera_head_border" style="background: rgb{{faceAction[faceCameraIndex].color}}"></view><cover-image class="face_camera_head_back" src="./../face/{{faceAction[faceCameraIndex].color || '(0,0,0)'}}.png"></cover-image><view class="{{step > 1 ? 'ready_border_box' : ''}}"><cover-image tt:for="{{['lefttop', 'leftbottom', 'rightbottom', 'righttop']}}" tt:key="{{index}}" class="ready_border ready_border_{{item}}" src="https://p0.meituan.net/travelcube/2fbaeebd80e59fff3110078b1cfae68a306.png"></cover-image></view></camera><text tt:if="{{faceCameraIndex < faceAction.length && step !== 4}}" class="face_camera_title">屏幕即将闪烁,请保持姿势不变</text><view class="{{step > 3 ? 'face_loading_fadeout' : ''}}"><view class="face_loading_round {{faceCameraIndex >= faceAction.length ? 'face_loading_zoomIn' : ''}}"><image class="face_loading_head_icon" src="https://p1.meituan.net/travelcube/cdbacd00d4ed6b9aa39231392b4187462974.png"></image><view class="face_loading_line_back"><image class="face_loading_line" src="https://p0.meituan.net/travelcube/40c79f062573b2565740c8b9c328bf0d794.png"></image></view></view><text tt:if="{{faceCameraIndex >= faceAction.length}}" class="lading_text">识别中，请耐心等待</text></view><view tt:if="{{step >= 4}}" class="face_result {{step >= 4 ? 'face_result_show' : ''}}"><view class="result_icon {{responseData.status === 1 ? '' : 'result_icon_wrong'}}"><image class="face_loading_line" src="{{responseData.status === 1 ? 'https://p1.meituan.net/travelcube/7a38e66cad99400dd36a607e9934694b809.png' : 'https://p0.meituan.net/travelcube/bca78119d321c36e43305e191022deb0828.png'}}"></image></view><text class="result_title">{{responseData.status === 1 ? '验证成功' : '验证失败'}}</text><text class="resilt_subtitle">{{responseData.status === 1 ? '恭喜您，完成身份验证' : responseData.error.message}}</text><button bindtap="resultButtonHandler" class="yoda_primary_button">{{resultButton}}</button></view></view></view></template>
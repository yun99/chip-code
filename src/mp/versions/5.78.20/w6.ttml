<view class="goods-item" tt:if="{{goodsMessage.goodsList.length}}"><view class="item-title">{{exceptionMsg.title}}</view><view class="item-content" tt:for="{{exceptionMsg.goodsList}}" tt:for-item="goods" tt:key="{{goods.productName}}"><view class="item-image"><wq lazy-load="{{false}}" webp-conf="{{({width: '200rpx', height: '200rpx'})}}" class="goods-image" src="{{goods.picture}}" /><view class="invalid-box" tt:if="{{goods.exceptionType === 3}}"><view class="image-invalid" /><wq lazy-load="{{false}}" webp-conf="{{({width: '120rpx', height: '76rpx'})}}" class="invalid" src="https://s3plus.meituan.net/v1/mss_1f3dca8fe8534e6fa640054bf3ad2ba6/grocery-fe-cdn/wx/images/cdn/remind-meassage-invalid.b0841076.png" /></view></view><view class="item-message"><view class="title {{goods.exceptionType === 3 ? 'gray-color' : ''}}">{{goods.productName}}</view><view class="label" tt:if="{{goods.limitPurchaseTag}}"><view class="tag">{{goods.limitPurchaseTag}}</view></view><view class="invalid-price" tt:if="{{goods.exceptionType === 3 && goods.productPrice}}"><view class="invalid-price-symbol">¥</view><view class="invalid-price-num">{{goods.productPrice}}</view><view>/份</view></view><view class="remind" tt:for="{{goods.otherLine}}" tt:key="{{item}}">{{item}}</view><view class="adjust" tt:if="{{goods.lastLine.noPrice}}">{{goods.lastLine.noPrice}}</view><view class="adjust price" tt:else><text class="word">{{goods.lastLine.beforePrice}}</text><text class="unit-symbol">¥</text><text class="price-num">{{goods.lastLine.price}}</text><text class="word">{{goods.lastLine.afterPrice}}</text></view></view></view></view>
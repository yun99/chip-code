<view class="popslider yoda_fixed_back" style="display:{{isShow}}"><view class="slider yoda_fixed_box" animation="{{animationData}}"><view class="yoda_fixed_close" catchtap="sliderClose"></view><block tt:if="{{validStep === 'slider'}}"><view class="yoda_center_text yoda_title_text">{{title}}</view><view class="slider-warpper"><view class="slider-boxWrapper"><view class="slider-boxStatic {{slideStatusClass}}" bindtouchstart="sliderTouchStart" catchtouchmove="sliderTouchMove" bindtouchcancel="sliderTouchEnd" bindtouchend="sliderTouchEnd" style="left:{{moveWidth}}px;" id="groove"></view><view class="slider-movingBar" style="width:{{moveWidth}}px;"></view><view class="tip"></view></view><view class="slider-yodaTip" id="yodaTip">3s 未完成验证，请重试。</view></view></block><block tt:elif="{{validStep === 'code'}}"><view class="yoda_center_text yoda_title_text">{{imgTitle}}</view><view class="code-warpper"><view class="code"><image bindtap="sliderUpdataCaptch" class="img" src="{{codeImage}}" mode="scaleToFill" /><input class="ipt" type="text" placeholder="" bindinput="sliderValideCodeInput" bindfocus="bindSliderInputFocus" bindblur="bingSliderInputBlur" value="{{sliderCode}}" /></view><view class="btn" bindtap="sliderValideCode">{{imgButton}}</view></view></block><view tt:if="{{pageData.category === 'GROUP'}}"><text bindtap="changeVerify" class="yoda_change_text">切换验证方式</text></view></view></view>
<view class="question-item-container"><view class="title"><view class="text"><view class="text-content">{{questionIndex + 1}}. {{questionInfo.questionText}}</view><view class="type-text" tt:if="{{questionInfo.questionTypeText}}">({{questionInfo.questionTypeText}})</view><view class="require" tt:if="{{questionInfo.needAnswer}}"></view></view><view class="sub-title-text" tt:if="{{questionInfo.questionTip}}">{{questionInfo.questionTip}}</view></view><view class="single-select" tt:if="{{questionInfo.showSingleSelect}}"><view class="select-item {{item.selected ? 'select-item-selected-true' : ''}}" data-question-type="{{questionInfo.questionType}}" data-question-id="{{questionInfo.questionId}}" data-answer-id="{{item.answerId}}" catchtap="onAnswerChange" tt:for="{{answerOptions}}">{{item.answerText}}</view></view><view class="multiple-select" tt:if="{{questionInfo.showMultipleSelect}}"><view class="select-item {{item.selected ? 'select-item-selected-true' : ''}}" data-question-type="{{questionInfo.questionType}}" data-question-id="{{questionInfo.questionId}}" data-answer-id="{{item.answerId}}" catchtap="onAnswerChange" tt:for="{{answerOptions}}">{{item.answerText}}</view></view><view class="textarea" tt:if="{{questionInfo.showTextarea}}"><textarea class="question-textarea" placeholder="请输入您的问题描述" placeholder-style="font-size: 30rpx; color: rgba(0,0,0,0.35);" maxlength="{{500}}" data-question-type="{{questionInfo.questionType}}" data-question-id="{{questionInfo.questionId}}" bindinput="onAnswerChange" /></view></view>
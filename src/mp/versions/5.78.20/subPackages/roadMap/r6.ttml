<view class="road-map"><map class="map" id="roadmap" scale="{{scale}}" markers="{{markers}}" polyline="{{polyline}}" include-points="{{includePoints}}"></map><view class="oper-area {{errMessage ? 'hide' : ''}}"><view bindtap="onLocate"><view class="btn-locate-load-fail" tt:if="{{isLocateIconLoadFail}}">定位</view><cover-image class="btn-locate" src="{{ICON_LOCATE}}" bindtap="onLocate" binderror="onLocateIconLoadFail" tt:else></cover-image></view><view class="info-panel"><view class="btns-wrap"><view class="btn-mode {{currentMode === item ? 'active' : ''}}" data-mode="{{item}}" bindtap="toChangeMode" tt:if="{{modeListForView && modeListForView.length}}" tt:for="{{modeListForView}}" tt:key="{{index}}"><view class="btn-mode-icon-txt" tt:if="{{isModeIconLoadFail}}">{{item === 'walk' ? '步行：' : '驾车：'}}</view><cover-image class="btn-mode-icon" src="{{currentMode === item ? routeInfoMap[item].activeIconPath : routeInfoMap[item].iconPath}}" binderror="onModeIconLoadFail" tt:else /><view class="btn-mode-txt">{{routeInfoMap[item].minDuration}}分钟</view></view></view><view class="address">{{destAddress}}</view><view class="distance">距您<view class="length">{{distance}}</view></view></view></view></view>
.edit-info-wrapper{background:#f5f6f7;box-sizing:border-box;min-height:100vh}.edit-info-wrapper .label{box-sizing:border-box;color:#191919;font-size:30rpx;height:84rpx;line-height:84rpx;padding-left:24rpx}.edit-info-wrapper .input-wrapper{align-items:center;background:#fff;box-sizing:border-box;display:flex;height:100rpx;justify-content:space-between;padding-left:24rpx;width:100vw}.edit-info-wrapper .input{width:calc(100% - 84rpx)}.edit-info-wrapper .close{background:url(https://p0.meituan.net/mallimages/ff66404861d7fffaa363ab807ef7362c500.png) no-repeat;background-position:50%;background-size:36rpx;height:100rpx;width:84rpx}.edit-info-wrapper .tips{color:#95989e;font-size:24rpx;line-height:33rpx;padding:14rpx 0 0 24rpx}.edit-info-wrapper .button{align-items:center;background:#ffd100;border-radius:90rpx;color:rgba(0,0,0,.7);display:flex;font-family:PingFangSC-Semibold;font-size:34rpx;font-weight:700;height:90rpx;justify-content:center;margin:60rpx 24rpx 0;width:calc(100vw - 48rpx)}.edit-info-wrapper .button-disabled{background:#e4e4e4;color:#717171}
<view class="declaration-area-container" tt:if="{{propaganda}}"><view class="declaration-area"><view class="declaration-title-container" tt:if="{{propaganda.brandPicUrl || defaultbrandPicUrl}}"><wq class="declaration-title" webp-conf="{{({width: '688rpx', height: '72rpx', isWithBackground:false})}}" src="{{propaganda.brandPicUrl || defaultbrandPicUrl}}" /></view><view class="declaration-container"><block tt:for="{{propaganda.contextVOList}}" tt:for-item="contextItem" tt:for-index="contextIndex" tt:key="picUrl"><view class="declaration-item"><view class="small-icon-container"><wq class="small-icon" webp-conf="{{({width: '44rpx', height: '44rpx', isWithBackground:false})}}" src="{{contextItem.iconUrl}}" /></view><view class="context"><view class="title" style="font-weight:700;">{{contextItem.title.text || ''}}</view><view class="subtitle {{contextItem.subTitles[0].text.length > 18 ? 'two-line' : ''}}">{{contextItem.subTitles[0].text || ''}}</view><view class="subtitle" tt:if="{{contextItem.subTitles[0].text.length <= 18}}">{{contextItem.subTitles[1].text || ''}}</view></view><view class="big-icon-container"><wq class="big-icon" webp-conf="{{({width: '120rpx', height: '120rpx', isWithBackground:false})}}" src="{{contextItem.picUrl}}" /></view></view><view class="declaration-item-separator-line" tt:if="{{contextIndex !== propaganda.contextVOList.length - 1}}" /></block></view><view class="description-container" tt:if="{{propaganda.detailVO.title.text && showDescriptionDetail}}"><view class="description-safe" bindtap="gotoSafePage" tt:if="{{propaganda.safeAnnounceBrief.title.text}}"><view class="safe-title"><view class="safe-title-text">{{propaganda.safeAnnounceBrief.title.text}}</view><view class="safe-title-more"><view class="more-test">{{propaganda.safeAnnounceBrief.urlText}}</view><wq class="more-image" isBlockImg="{{true}}" webp-conf="{{({width: '14rpx', height: '26rpx'})}}" src="https://s3plus.meituan.net/v1/mss_1f3dca8fe8534e6fa640054bf3ad2ba6/grocery-fe-cdn/wx/images/cdn/description-safe-arrow.e373217.png" /></view></view><view class="safe-subTitle">{{propaganda.safeAnnounceBrief.subTitle}}</view></view><view class="description-price"><view class="description-title">{{propaganda.detailVO.title.text || ''}}</view><text class="description-content">{{propaganda.detailVO.context || ''}}</text></view><view class="description-container-detail" bind:tap="showDescriptionDetail"><text class="sketch-text">点击收起商品价格说明</text><wq class="sketch-image" webp-conf="{{({width: '22rpx', height: '22rpx'})}}" isBlockImg="{{true}}" src="https://s3plus.meituan.net/v1/mss_1f3dca8fe8534e6fa640054bf3ad2ba6/grocery-fe-cdn/wx/images/cdn/description_sketch_up.7797934.png" /></view></view><view class="description-container-sketch" bind:tap="showDescriptionDetail" tt:if="{{propaganda.detailVO.title.text && !showDescriptionDetail}}"><text class="sketch-text">点击查看商品价格说明</text><wq class="sketch-image" webp-conf="{{({width: '22rpx', height: '22rpx'})}}" isBlockImg="{{true}}" src="https://s3plus.meituan.net/v1/mss_1f3dca8fe8534e6fa640054bf3ad2ba6/grocery-fe-cdn/wx/images/cdn/description_sketch_down.8848933.png" /></view></view></view>
<view class="cookbook-recommend-area" tt:if="{{cookbookData}}"><view class="cookbook-recommend-title" bindtap="moreCookbook" data-jump-url="{{cookbookData.cookBookMoreUrl.iretail}}"><view class="title-text g-font-bold">{{cookbookData.moduleTitle.text || '推荐做法'}}</view><view class="cookbook-recommend-title-right" tt:if="{{cookbookData.cookBookMoreUrl.iretail}}"><view class="g-text-3 g-color-4">{{cookbookData.cookBookMoreUrl.text || '查看全部'}}</view><wq webp-conf="{{({width: '20rpx', height: '20rpx' })}}" isBlockImg="{{true}}" src="https://s3plus.meituan.net/v1/mss_1f3dca8fe8534e6fa640054bf3ad2ba6/grocery-fe-cdn/wx/images/cdn/sku_detail_right_arrow_grey.2649732.png" /></view></view><view class="cookbook-recommend-container" tt:if="{{cookbookData.cookbookList.length}}"><scroll-view class="scroll-view-container" scroll-x="true" bindscroll="onScrollCookbook"><block tt:for="{{cookbookData.cookbookList}}" tt:key="cookbookId" tt:for-item="cookbookItem" tt:for-index="cookbookIndex"><view class="cookbook-recommend-item" bindtap="gotoCookBookDetail" data-cookbook-item="{{cookbookItem}}" data-cookbook-index="{{cookbookIndex}}"><wq class="cookbook-item-image" webp-conf="{{({width: '220rpx', height: '165rpx' })}}" src="{{cookbookItem.picUrls[0].url}}" /><view class="cookbook-item-name">{{cookbookItem.name.text || ''}}</view></view></block></scroll-view></view><view class="separator-block" /></view>
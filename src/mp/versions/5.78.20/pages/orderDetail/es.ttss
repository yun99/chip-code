@keyframes rotate{form{transform:rotate(0deg)}to{transform:rotate(1turn)}}.qrcode-dialog{align-items:center;background:#fff;border-radius:20rpx;box-sizing:border-box;display:flex;flex-direction:column;justify-content:center;padding:36rpx 0;position:relative;width:630rpx}.qrcode-dialog .btn-close{position:absolute;right:0;top:-114rpx}.qrcode-dialog .btn-close .icon-close{width:54rpx}.qrcode-dialog .title{color:rgba(0,0,0,.9);font-size:34rpx;font-weight:700;line-height:48rpx;text-align:center}.qrcode-dialog .content{align-items:center;display:flex;flex-direction:column;justify-content:center;position:relative;width:100%}.qrcode-dialog .content .qrcode{height:480rpx;width:480rpx}.qrcode-dialog .content.hide{display:none}.qrcode-dialog .order-id{color:#191919;font-size:30rpx;font-weight:700;line-height:42rpx;text-align:center}.qrcode-dialog .refresh{align-items:center;background:hsla(0,0%,100%,.9);display:flex;height:100%;justify-content:center;left:0;position:absolute;top:0;width:100%}.qrcode-dialog .refresh .refresh-btn{align-items:center;background:#ffd100;border-radius:34rpx;color:rgba(25,25,25,.8);display:inline-flex;font-size:28rpx;font-weight:700;margin-bottom:42rpx;padding:14rpx 30rpx}.qrcode-dialog .refresh .refresh-btn .btn-icon{height:32rpx;margin-right:6rpx;width:32rpx}.qrcode-dialog .refresh .refresh-btn .btn-icon.loading{animation:rotate 1s linear infinite}
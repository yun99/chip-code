@import "../../pw.ttss";.container{background:#fff;border-top-left-radius:20rpx;border-top-right-radius:20rpx;width:750rpx}.container,.header{display:flex;flex-direction:column}.header{align-items:center;border-bottom:1rpx solid #f0f0f0;justify-content:center}.header .title{color:rgba(0,0,0,.9);font-size:36rpx;font-weight:700;line-height:50rpx;padding-top:24rpx}.header .title:only-child{padding:30rpx 0}.header .subtitle{color:rgba(0,0,0,.5);font-size:28rpx;font-weight:400;line-height:40rpx;margin-top:6rpx;padding-bottom:24rpx}.content{flex:1;overflow:hidden;padding-bottom:80rpx;width:100%}.content .order{box-sizing:border-box;padding-top:30rpx}.content .order:last-child .skus .list{border:none}.content .order .info{color:#333;font-size:28rpx;margin-bottom:18rpx;padding:0 24rpx}.content .order .text{display:inline-block}.content .order .price{margin-left:20rpx}.content .order .skus{overflow-x:auto;overflow-y:hidden;width:100%}.content .order .skus .list{border-bottom:1px solid #f4f4f4;display:inline-flex;margin:0 24rpx;min-width:calc(100% - 48rpx);padding-bottom:30rpx}.content .order .skus .order-sku-item-pic{flex:0 0 160rpx;height:160rpx;width:160rpx}.content .order .skus .order-sku-item-pic+.order-sku-item-pic{margin-left:12rpx}.content .order .sku-list{display:flex;padding-bottom:30rpx}.footer{align-items:center;display:flex;justify-content:center;padding:14rpx 0}.footer.ipx{padding-bottom:68rpx}.footer .btn{background-color:#fff;border:1rpx solid rgba(0,0,0,.12);border-radius:45rpx;box-sizing:border-box;color:rgba(0,0,0,.7);font-size:34rpx;height:90rpx;line-height:90rpx;margin:0 14rpx;text-align:center;width:336rpx}.footer .btn.danger{background-color:#f20000;border:none;color:#fff}.footer .btn.warn{background-color:#ffd100;border:none;color:rgba(0,0,0,.8);font-weight:700}
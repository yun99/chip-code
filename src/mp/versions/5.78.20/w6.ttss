.goods-item{background:#fff;border-radius:18rpx;margin-top:18rpx;padding:24rpx;width:calc(100vw - 96rpx)}.item-title{border-bottom:1px solid #f5f5f5;color:#121924;font-family:PingFangSC-Medium;font-size:32rpx;font-weight:700;margin-bottom:18rpx;padding-bottom:22rpx}.item-content{display:flex;margin-bottom:30rpx}.item-content:last-child{margin-bottom:0}.item-image{display:inline-block;display:flex;justify-content:center;margin-right:18rpx;position:relative}.item-center{align-items:center}.goods-image{border-radius:6rpx;height:200rpx;width:200rpx}.item,.title{-webkit-line-clamp:2;-webkit-box-orient:vertical;color:#121924;display:-webkit-box;font-size:30rpx;margin-bottom:12rpx;overflow:hidden;text-overflow:ellipsis}.title{line-height:42rpx;word-break:break-all}.gray-color{color:#95989e}.label{color:#ff1929;font-size:24rpx;line-height:24rpx;margin-bottom:6rpx}.tag{border:1px solid rgba(255,25,41,.74);border-radius:6rpx;display:inline-block;padding:4rpx 6rpx}.remind{color:#ff6000;font-size:28rpx;margin-bottom:6rpx}.adjust{color:#ff1929;font-family:PingFangSC-Medium;font-size:28rpx;font-weight:700}.price{align-items:baseline;display:flex}.word{align-items:center}.unit-symbol,.word{display:flex;height:36rpx}.unit-symbol{font-size:26rpx;justify-content:center;margin-left:6rpx;margin-right:2rpx;width:20rpx}.price-num,.unit-symbol{font-weight:700;transform:translateY(1px)}.price-num{display:inline;font-size:36rpx;height:36rpx;line-height:1;margin-right:6rpx}.invalid-box{align-items:center;display:flex;justify-content:center;left:0;top:0}.image-invalid,.invalid-box{height:200rpx;position:absolute;width:200rpx}.image-invalid{background:rgba(0,0,0,.4);border-radius:6px;z-index:1}.invalid{height:76rpx;position:absolute;width:120rpx;z-index:2}.invalid-price{align-items:baseline;color:#95989e;display:flex;font-size:26rpx;line-height:1;margin-bottom:6rpx}.invalid-price-symbol{font-size:30rpx}.invalid-price-num{font-size:36rpx;margin-left:2rpx;margin-right:6rpx;transform:translateY(1px)}.redeem-label{align-items:center;background-image:linear-gradient(-135deg,#ff5e24,#ff1929);border-radius:6rpx 0 6rpx 0;color:#fff;display:flex;font-family:PingFangSC-Medium;font-size:26rpx;font-weight:700;height:36rpx;justify-content:center;left:0;line-height:1;position:absolute;top:0;width:64rpx;z-index:2}
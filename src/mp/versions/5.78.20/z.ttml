<wxs module="tools" src="./jr.sjs" /><wxs module="asset" src="./ot.sjs" /><ed type="bottom" show="{{showSkuPurchasePanel}}" bindclose="closeSpecModal" data-is-manual-close="{{true}}" is-full-screen="{{true}}" is-show-ipx-bar="{{isShowIpxBar}}" catchtouchmove="prevents" z-index="999"><view class="sku-purchase-panel-container" tt:if="{{showSkuPurchasePanel}}"><view class="base-info"><view class="close-icon-area" catchtap="closeSpecModal"><wq webp-conf="{{({width:'24rpx', height:'24rpx'})}}" isBlockImg="{{true}}" src="{{asset('images/skuDetail/close-modal-gray')}}" data-is-manual-close="{{true}}" /></view><block tt:if="{{isSpuCard}}"><view class="spu-card-container"><view class="spu-image-container"><wq src="{{spuData.picUrl}}" webp-conf="{{({width:'200rpx', height:'200rpx'})}}" /></view><view class="spu-info-container"><view class="spu-title"><text class="title-text">{{spuData.spuTitle.text}}</text></view><view class="spu-price-wrap"><view class="g-price g-price-1"><view class="g-price-unit">¥</view>{{tools.slice(spuData.lowSellPrice.text)}}</view><block tt:if="{{tools.slice(spuData.highSellPrice.text)}}"><text class="price-connection">-</text><view class="g-price g-price-1">{{tools.slice(spuData.highSellPrice.text)}}</view></block></view></view></view></block><block tt:else><ux sku="{{currentSku}}" schema="{{currentSkuSchema}}" canDirect="{{false}}"></ux></block></view><view class="separator-line" /><scroll-view class="spec-count-container" scroll-y="{{true}}" scroll-with-animation="{{true}}" style="max-height: {{specCountContainerMaxHeight || 612}}rpx"><view class="spec-radio-group-container" catchtap="onSelectRadio" tt:for="{{skuSpecRadioGroups}}" tt:for-item="skuSpecRadioGroup" tt:key="attrId" tt:for-index="groupIndex"><view class="title">{{skuSpecRadioGroup.attrValue}}</view><view class="spec-radio-List"><block tt:for="{{skuSpecRadioGroup.radioList}}" tt:for-item="radio" tt:for-index="ratioIndex" tt:key="index"><view class="radio {{radio.selected ? 'selected' : ''}} {{radio.enabled ? 'enabled' : ''}}" data-group-index="{{groupIndex}}" data-ratio-index="{{ratioIndex}}" data-enabled="{{radio.enabled}}" data-selected="{{radio.selected}}" data-attr-id="{{skuSpecRadioGroup.attrId}}" data-value="{{radio.meta.attrValue}}">{{radio.meta.attrValue}}</view></block></view></view><view class="separator-line" /><view class="current-sku-count"><view class="title" style="padding-bottom:0;">选数量</view><view class="edit-number-container"><view class="sku-count"><wq class="{{!isSpuCard && subTractCountAvailable ? '' : 'disable-btn'}}" isBlockImg="{{true}}" webp-conf="{{({width:'52rpx', height:'52rpx'})}}" src="https://s3plus.meituan.net/v1/mss_1f3dca8fe8534e6fa640054bf3ad2ba6/grocery-fe-cdn/wx/images/cdn/decrease-cart-yellow.77e3202.png" data-type="subtract" data-available="{{subTractCountAvailable}}" bindtap="onChangeSkuCount" /><view class="sku-count__number">{{currentSkuCount}}</view><wq class="{{!isSpuCard && addCountAvailable ? '' : 'disable-btn'}}" isBlockImg="{{true}}" webp-conf="{{({width:'52rpx', height:'52rpx'})}}" src="https://s3plus.meituan.net/v1/mss_1f3dca8fe8534e6fa640054bf3ad2ba6/grocery-fe-cdn/wx/images/cdn/add-cart-yellow.144916.png" data-type="add" data-available="{{addCountAvailable}}" bindtap="onChangeSkuCount" /></view></view></view></scroll-view><view class="edit-tip"><text>{{selectedSkuSpecList.length > 0 ? '已选择：' : '请选择规格属性'}}</text><block tt:if="{{selectedSkuSpecList.length > 0}}" tt:for="{{selectedSkuSpecList}}" tt:for-index="index" tt:for-item="skuSpecItem" tt:key="index"><text>{{skuSpecItem.attrValue}}{{selectedSkuSpecList.length-index===1?"":"，"}}</text></block></view><view class="operator-button-container" catch:tap="onTapOperatorButton" data-text="{{operatorButton.text}}" data-status="{{operatorButton.status}}" data-enable="{{operatorButton.enable}}"><view class="{{operatorButton.styleId}} {{isSpuCard ? 'unsale' : ''}}">{{operatorButton.text}}</view></view></view></ed>
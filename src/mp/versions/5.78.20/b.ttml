<view class="mall-modal-backdrop" style="z-index: {{zIndex}};" catchtouchmove="catchTouchMove" bindtap="handleBackdropClick" tt:if="{{show}}"><view class="mall-modal"><view class="mall-modal-header {{useSlot ? 'slot-header':''}}"><view class="title-wrapper" tt:if="{{title}}"><text class="title" style="{{titleStyle}}">{{title}}</text><image class="close-icon" src="https://s3plus.meituan.net/v1/mss_1f3dca8fe8534e6fa640054bf3ad2ba6/grocery-fe-cdn/wx/images/cdn/icon_close.e9c5341.png" bindtap="init" tt:if="{{canClose}}"></image></view><view class="message" tt:if="{{message}}">{{message}}</view></view><block tt:if="{{useSlot}}"><slot></slot></block><block tt:else><view class="mall-modal-items" tt:if="{{itemList && itemList.length}}"><view class="mall-modal-item" bindtap="onModalButtonClick" data-action="select" data-index="{{index}}" tt:for="{{itemList}}" tt:for-item="item" tt:key="index">{{item || '文本内容'}}</view></view><view class="mall-modal-item mall-modal-item-footer {{footerDirection}}" bindtap="onModalButtonClick" data-action="footerClick" tt:if="{{footer}}"><text>{{footer}}</text><image class="right" src="https://s3plus.meituan.net/v1/mss_1f3dca8fe8534e6fa640054bf3ad2ba6/grocery-fe-cdn/wx/images/cdn/right_icon.8ee2616.png" tt:if="{{showFooterRightArrow}}"></image></view></block></view><view class="mall-error-code" tt:if="{{errorCode}}">{{errorCode}}</view></view>
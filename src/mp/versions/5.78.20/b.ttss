.mall-modal-backdrop{align-items:center;background:rgba(0,0,0,.8);display:flex;flex-flow:column nowrap;height:100%;justify-content:center;left:0;position:fixed;top:0;width:100%;word-break:break-all;z-index:1010}.mall-error-code{bottom:30rpx;color:rgba(0,0,0,.8);font-size:24rpx;position:fixed;text-align:center}.mall-modal{background:#fff;border-radius:24rpx;box-sizing:border-box;color:#121924;font-size:32rpx;letter-spacing:-.45rpx;position:relative;width:calc(100% - 100rpx);z-index:1}.mall-modal-header{border-bottom:1rpx solid #eee;letter-spacing:0;position:relative;text-align:center}.mall-modal-header.slot-header{border:0rpx}.title-wrapper{align-items:center;display:flex;justify-content:center;margin:36rpx 0}.title{color:#121924;font-family:PingFangSC-Medium;font-size:34rpx;font-weight:500;line-height:48rpx}.close-icon{height:25rpx;position:absolute;right:30rpx;width:25rpx}.message{border-top:1rpx solid #eee;color:#121924;font-family:PingFangSC-Medium;font-size:32rpx;line-height:46rpx;padding:42rpx 45rpx 0}.mall-modal-items,.message{letter-spacing:0;text-align:center}.mall-modal-items{line-height:42rpx;max-height:810rpx;overflow-x:hidden;overflow-y:auto}.mall-modal-item{align-items:center;border-top:.7px solid #eee;display:flex;font-family:PingFangSC-Medium;font-size:30rpx;height:100rpx;justify-content:center;letter-spacing:0;position:relative}.mall-modal-item:first-child{border-top:0rpx}.mall-modal-item.selected{color:#1fa028}.mall-modal-item.selected .selected-icon{height:24rpx;left:-48rpx;position:absolute;width:24rpx}.mall-modal-item .right{height:24rpx;position:absolute;right:30rpx;width:12rpx}.mall-modal-item-footer{color:#ffd100}.mall-modal-item-footer.left{justify-content:flex-start;padding-left:70rpx}
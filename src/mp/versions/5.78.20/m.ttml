<block tt:if="{{show}}"><block tt:if="{{showImage}}"><image src="{{img}}" class="no-location-pending-img" mode="widthFix"></image></block><block tt:else><view class="mall-error-container {{type}}" style="{{customStyle}}"><block tt:if="{{type === 'no_location_wxapp' || type === 'no_location_wxapp_sub'}}"><image src="{{img}}" class="error-img" tt:if="{{img}}"></image><view class="mall-error-txt">{{message}}</view><re inline width="{{268}}" height="{{68}}" font-size="{{28}}" open-type="openSetting" tt:if="{{textOK}}">{{textOK}}</re></block><block tt:elif="{{type === 'no_network' || type === 'time_out'}}"><wm subBtnText="{{subBtnText}}" suggestionsText="{{suggestionsText}}" suggestionsLink="{{suggestionsLink}}" title="{{title}}" tips="{{message}}" bindgoAction="errorOk" btn-text="{{textOK}}" show-btn type="NETWORK" /></block><block tt:elif="{{type === 'forbidden' || type === 'server_error' || type === 'js_error' || type === 'low_performance' || type === 'js_error_unrecoverable'}}"><wm subBtnText="{{subBtnText}}" suggestionsText="{{suggestionsText}}" suggestionsLink="{{suggestionsLink}}" title="{{title}}" tips="{{message}}" bindgoAction="errorOk" btn-text="{{textOK}}" show-btn type="JS_SERVER_ERROR" /></block><block tt:elif="{{type === 'no_order' || type === 'no_order_list_rec'}}"><wm subBtnText="{{subBtnText}}" suggestionsText="{{suggestionsText}}" suggestionsLink="{{suggestionsLink}}" tips="{{message}}" bindgoAction="errorOk" btn-text="{{textOK}}" show-btn type="RECORDS" /></block><block tt:elif="{{isNew}}"><wm subBtnText="{{subBtnText}}" suggestionsText="{{suggestionsText}}" suggestionsLink="{{suggestionsLink}}" title="{{title}}" tips="{{message}}" bindgoAction="errorOk" btn-text="{{textOK}}" show-btn /></block><block tt:else><image src="{{img}}" class="error-img" style="{{customStyle ? 'margin-top: -168rpx;' : ''}}" tt:if="{{img && type !== 'no_network'}}"></image><view class="mall-error-txt">{{message}}</view><re type="primary" inline width="{{268}}" height="{{68}}" font-size="{{28}}" bindtap="errorOk" data-action="ok" data-type="error" data-persist="1" tt:if="{{textOK}}">{{textOK}}</re></block><view class="mall-error-code" tt:if="{{showErrorCode && errorCode}}">{{errorCode}}</view></view></block></block>
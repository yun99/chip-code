<ed show="{{showPopup}}" type="bottom" z-index="2000" bindclose="closePopup" isShowIpxBar="{{isShowIpxBar}}" is-full-screen="{{true}}" catchtouchmove="true" maskStyle="{{isWXMT ? 'bottom: 98rpx;' : ''}}"><view class="popup-screen"><view class="popup-header"><view class="popup-title text-ellipsis">{{(type==="tab0" ? unifiedPropagandaData.descTitle : unifiedPropagandaData.title) || '售后无忧'}}</view><wq isBlockImg class="popup-close-icon" webp-conf="{{({width: '26rpx', height: '26rpx'})}}" src="https://s3plus.meituan.net/v1/mss_1f3dca8fe8534e6fa640054bf3ad2ba6/grocery-fe-cdn/wx/images/cdn/popup_close.960b1059.png" bindtap="closePopup" /></view><scroll-view scroll-y="{{true}}" style="max-height:{{popupMaxHeight}};min-height:363rpx;"><view class="popup-body-container"><block tt:for="{{unifiedPropagandaData.items || []}}" tt:key="index"><view class="popup-item {{index === unifiedPropagandaData.items.length - 1 ? 'popup-item-last' : ''}}"><view class="first-line"><wq class="popup-item-icon" isBlockImg webp-conf="{{({width:'40rpx', height:'40rpx'})}}" src="{{type==='tab0' ? item.descIconUrl: item.iconUrl}}" /><view class="popup-item-title text-ellipsis g-text-2 g-font-bold">{{item.tag}}</view></view><view class="second-line" bindtap="tapLink" data-link="{{item.link}}" data-title="{{item.tag}}"><view class="popup-item-desc g-text-3">{{item.description}}<wq class="popup-item-link-arrow" webp-conf="{{({width:'16.5rpx', height:'16.5rpx'})}}" src="https://p0.meituan.net/scarlett/1171cf8f6edafa2778679078b78871e7483.png" tt:if="{{item.link}}" /></view></view></view></block></view></scroll-view></view></ed>
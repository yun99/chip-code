.popup-root{background:#fff;border-radius:24rpx 24rpx 0 0;display:flex;flex-direction:column;max-height:80vh;min-height:50vh;padding-bottom:12rpx}.header{align-items:center;border-bottom:1px solid #eee;display:flex;height:110rpx;justify-content:space-between;margin-bottom:6rpx}.header-title{font-size:36rpx;font-weight:700;line-height:50rpx;padding-left:50%}.title{transform:translateX(-50%)}.header-delete{height:24rpx;padding:30rpx;width:24rpx}.goods-area{flex:1;overflow-y:scroll}.button-area{align-items:center;box-shadow:inset 0 1px 0 0 #eee;display:flex;justify-content:space-between;padding:12rpx 0}.remind-text{font-size:26rpx;padding-left:30rpx}.confirm-btn{align-items:center;background:#ffd100;border-radius:46rpx;color:rgba(0,0,0,.7);display:flex;font-size:34rpx;font-weight:700;height:90rpx;justify-content:center;margin:0 30rpx 0 0;width:450rpx}.confirm-btn:after{border:none}.cancel-button{background:#fff;border:1px solid rgba(0,0,0,.2);border-radius:46rpx;color:rgba(0,0,0,.9);margin:0 24rpx;width:calc(100vw - 48rpx)}
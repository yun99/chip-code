{
  "name": "My First Chrome Extension",
  "version": "1.0",
  "description": "A simple extension to demo Chrome extension development",
  "manifest_version": 2,
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": ["notifications"]
}